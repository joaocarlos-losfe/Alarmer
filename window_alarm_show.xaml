<Window x:Class="Alarmer.window_alarm_show"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Alarmer"
        xmlns:gif="clr-namespace:XamlAnimatedGif;assembly=XamlAnimatedGif"
        mc:Ignorable="d"
        Title="Alarme tocando..." Height="600" Width="800" ResizeMode="NoResize" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid Height="600" Width="800">

        <Image gif:AnimationBehavior.SourceUri="gif/animated alarm.gif" />
        <Button x:Name="btn_parar" Content="Parar" HorizontalAlignment="Left" Margin="356,520,0,0" VerticalAlignment="Top" Width="74" Click="btn_parar_Click"/>

    </Grid>
</Window>
